	<http auto-config="true" >
		<csrf disabled="true"/>
	<intercept-url pattern="/**" access="hasAnyAuthority('ROLE_USER','ROLE_ADMIN','ROLE_MODERATOR','ROLE_GO')" />
	<form-login login-processing-url="/login" />

	<intercept-url pattern="/admin/*" access="hasAnyRole('ROLE_ADMIN','ROLE_GO')" />
	<logout logout-success-url="/"/>

	<intercept-url pattern="/user/*" access="hasAnyRole('ROLE_ADMIN','ROLE_MODERATOR','ROLE_GO')" />
	<logout logout-success-url="/login" invalidate-session="false" logout-url="/logout"/>

	</http>

